# Dev Container Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://lightningtalk:lightningtalk@localhost:5432/lightningtalk_dev
DATABASE_TYPE=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
NODE_ENV=development
PORT=3000
SITE_NAME="Lightning Talk Circle Dev"
SITE_URL="http://localhost:3000"

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token
GITHUB_OWNER=your_username
GITHUB_REPO=your_repo

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_FROM="noreply@lightningtalk.dev"
EMAIL_SERVICE=mock

# Security
JWT_SECRET=dev-jwt-secret-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production
JWT_EXPIRES_IN=24h

# Admin User
ADMIN_EMAIL=admin@lightningtalk.dev
ADMIN_PASSWORD=DevPassword123!
ADMIN_NAME=Dev Admin

# Feature Flags
AUTO_MERGE=false
REQUIRE_REVIEW=true
REQUIRE_STATUS_CHECKS=true
SEND_REMINDER_EMAILS=false
SEND_CONFIRMATION_EMAILS=false

# Development Tools
DEBUG=lightningtalk:*
LOG_LEVEL=debug