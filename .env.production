# Lightning Talk Circle - Production Environment (AWS)
# This file is for AWS Lambda/serverless deployment

# Environment
NODE_ENV=production
PORT=3000
DEBUG=false

# Database Configuration - DynamoDB for production
DATABASE_TYPE=dynamodb
AWS_REGION=ap-northeast-1

# DynamoDB Tables (managed by CDK)
DYNAMODB_EVENTS_TABLE=lightningtalk-events-prod
DYNAMODB_PARTICIPANTS_TABLE=lightningtalk-participants-prod
DYNAMODB_PRESENTATIONS_TABLE=lightningtalk-presentations-prod
DYNAMODB_TALKS_TABLE=lightningtalk-talks-prod
DYNAMODB_ANALYTICS_TABLE=lightningtalk-analytics-prod

# Email Configuration - SES for production
EMAIL_ENABLED=true
EMAIL_PROVIDER=ses
EMAIL_FROM=noreply@lightningtalk-circle.com
AWS_SES_REGION=ap-northeast-1

# Security - Retrieved from AWS Secrets Manager
# These are placeholder names - actual values come from Secrets Manager
JWT_SECRET_ARN=arn:aws:secretsmanager:ap-northeast-1:ACCOUNT:secret:lightningtalk-circle/production/jwt
SESSION_SECRET_ARN=arn:aws:secretsmanager:ap-northeast-1:ACCOUNT:secret:lightningtalk-circle/production/session
API_KEYS_SECRET_ARN=arn:aws:secretsmanager:ap-northeast-1:ACCOUNT:secret:lightningtalk-circle/production/api-keys

# CORS Configuration
CORS_ORIGIN=https://d19wq5f8laq7i.cloudfront.net

# File Uploads - S3 for production
UPLOAD_PROVIDER=s3
S3_BUCKET_NAME=lightningtalk-circle-uploads-prod
S3_REGION=ap-northeast-1
MAX_FILE_SIZE=5mb

# External Services
GITHUB_INTEGRATION_ENABLED=true
GITHUB_SECRET_ARN=arn:aws:secretsmanager:ap-northeast-1:ACCOUNT:secret:lightningtalk-circle/production/github

# WordPress Integration (if needed)
WP_PRODUCTION_MODE=true
WP_SITE_URL=https://xn--6wym69a.com
WP_API_URL=https://xn--6wym69a.com/wp-json/wp/v2

# CDN and Static Assets
STATIC_ASSETS_URL=https://d19wq5f8laq7i.cloudfront.net
CDN_DOMAIN=d19wq5f8laq7i.cloudfront.net

# Production URLs
API_BASE_URL=https://6wva362954.execute-api.ap-northeast-1.amazonaws.com/development/api
FRONTEND_URL=https://d19wq5f8laq7i.cloudfront.net

# Logging - CloudWatch for production
LOG_LEVEL=info
LOG_FORMAT=json
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/lightningtalk-api
ENABLE_REQUEST_LOGGING=false

# Performance (optimized for production)
REQUEST_TIMEOUT=30000
MAX_PAYLOAD_SIZE=1mb
ENABLE_COMPRESSION=true

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_NAMESPACE=LightningTalkCircle

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Production Features
AUTO_RESTART=false
LIVE_RELOAD=false
ERROR_STACK_TRACES=false
ENABLE_TEST_ROUTES=false