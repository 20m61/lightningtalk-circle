# Lightning Talk Circle - Development Environment (Docker)
# This file is for local Docker development environment

# Environment
NODE_ENV=development
PORT=3000
DEBUG=true

# Database Configuration - File-based for development
DATABASE_TYPE=file
STORAGE_PATH=/app/data
ENABLE_DB_LOGGING=true

# Email Configuration - Console/Mock for development
EMAIL_ENABLED=false
EMAIL_PROVIDER=console
EMAIL_FROM=dev@lightningtalk-circle.local
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=1025

# Security - Development values (NOT for production)
JWT_SECRET=development-jwt-secret-do-not-use-in-production
SESSION_SECRET=development-session-secret-do-not-use-in-production
CORS_ORIGIN=http://localhost:3000

# File Uploads
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10mb

# External Services - Mock/Disabled for development
GITHUB_INTEGRATION_ENABLED=false
GITHUB_TOKEN=
GITHUB_OWNER=lightningtalk-circle
GITHUB_REPO=main

# WordPress Development (if needed)
WP_DEV_MODE=true
WORDPRESS_DB_HOST=localhost:3306
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress
WORDPRESS_DB_NAME=wordpress_dev

# Modern Theme Development
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=3001
HOT_RELOAD=true
SOURCE_MAPS=true

# Development URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
STATIC_ASSETS_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=development
ENABLE_REQUEST_LOGGING=true

# Performance (relaxed for development)
REQUEST_TIMEOUT=60000
MAX_PAYLOAD_SIZE=50mb

# Testing
TEST_DATABASE_PATH=/app/data/test
MOCK_EXTERNAL_SERVICES=true
ENABLE_TEST_ROUTES=true

# Development Features
AUTO_RESTART=true
LIVE_RELOAD=true
ERROR_STACK_TRACES=true
BROWSER_SYNC_PROXY=http://localhost:8888