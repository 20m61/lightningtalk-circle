# 共通アプリケーション設定
SITE_NAME="なんでもライトニングトーク"
NODE_ENV_DEFAULT=development
PORT_DEFAULT=3000

# データベース設定（デフォルト）
DATABASE_TYPE_DEFAULT=file

# 機能フラグ
FEATURE_GOOGLE_AUTH=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_AI_IMAGES=false
FEATURE_WEBSOCKETS=true
FEATURE_EMAIL_NOTIFICATIONS=true

# セキュリティ設定（共通）
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
JWT_EXPIRES_IN=24h
SESSION_SECRET_DEFAULT=change_this_in_production

# メール設定（共通）
EMAIL_FROM="noreply@lightningtalk.example.com"
EMAIL_SERVICE_DEFAULT=mock

# 共通URL設定
CORS_ORIGINS_DEFAULT="http://localhost:3000,http://localhost:8080"

# API設定
API_VERSION=v1
API_TIMEOUT=30000

# イベント設定
REGISTRATION_LIMIT_PER_HOUR=5
MAX_PARTICIPANTS_PER_EVENT=100

# ファイルアップロード
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf"

# 外部サービス
GOOGLE_ANALYTICS_ID_DEFAULT=""
SENTRY_DSN_DEFAULT=""