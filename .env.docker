# Lightning Talk Circle - Docker Environment Configuration
# Copy this file to .env for Docker development

# Application Configuration
NODE_ENV=development
PORT=3000
DEBUG=true

# File-based Storage (default for development)
DATABASE_TYPE=file
STORAGE_PATH=/app/data

# Email Configuration (disabled for local development)
EMAIL_ENABLED=false
EMAIL_PROVIDER=console
EMAIL_USER=
EMAIL_PASS=

# GitHub Integration (optional for local development)
GITHUB_TOKEN=
GITHUB_OWNER=lightningtalk-circle
GITHUB_REPO=main

# Security (development values - change for production)
JWT_SECRET=development-jwt-secret-change-in-production
SESSION_SECRET=development-session-secret-change-in-production

# WordPress Integration (if using WordPress services)
WORDPRESS_DB_HOST=wp-db:3306
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress
WORDPRESS_DB_NAME=wordpress

# Modern Theme Configuration
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=3001

# Proxy Configuration
BROWSER_SYNC_PROXY=http://localhost:8888

# Logging
LOG_LEVEL=debug
LOG_FORMAT=development

# Development Features
HOT_RELOAD=true
AUTO_RESTART=true
SOURCE_MAPS=true

# Performance Settings
MAX_PAYLOAD_SIZE=10mb
REQUEST_TIMEOUT=30000

# Development URLs
FRONTEND_URL=http://localhost:3010
API_BASE_URL=http://localhost:3010/api
WORDPRESS_URL=http://localhost:8888

# Testing
TEST_DATABASE_PATH=/app/data/test
MOCK_EXTERNAL_SERVICES=true